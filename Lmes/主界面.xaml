                </TabControl>
            </GroupBox>
            <notifications:NotificationArea  
                MaxItems="3" x:Name="WindowArea"
                Position="TopRight" Grid.ColumnSpan="10" Grid.RowSpan="10" />
        </Grid>
    </DockPanel>

</mah:MetroWindow>
