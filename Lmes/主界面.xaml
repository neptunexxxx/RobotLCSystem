                <ComboBox Name="当前工站"  MinWidth="100" IsReadOnly="True" ItemsSource="{Binding 工位运行列表}" SelectionChanged="ComboBox_SelectionChanged"/>-->
            </StackPanel>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="界面选单" Grid.RowSpan="2">
                <ScrollViewer>
                    <StackPanel>
                        <!--<Button Content="切换用户" Margin="10" Click="Button_Click" Cursor="Hand" FontWeight="Bold"/>-->
                        <Button Content="参数设置界面" Margin="10" Click="Button_Click_2" Cursor="Hand" FontWeight="Bold"/>
                        <Button Content="站点设置界面" Margin="10" Click="Button_站点设置界面_Click" Cursor="Hand" FontWeight="Bold"/>
                        <!--<Button Content="生产参数信息查询界面" Margin="10" Click="Button_生产参数信息界面_Click"  FontWeight="Bold"/>
