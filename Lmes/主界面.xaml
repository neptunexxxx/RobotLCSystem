                        <Button Content="物料绑定信息查询界面" Margin="10" Click="Button_物料绑定信息查询界面_Click" FontWeight="Bold"/>-->
                        <Button x:Name="信号监视" Content="PLC信号监视界面" Margin="10" Click="Button_信号监视界面_Click" FontWeight="Bold"/>
                        <Button Content="UDP通讯测试界面" Margin="10" Click="Button_UDP通讯测试_Click" Cursor="Hand"  FontWeight="Bold"/>
                        <Button Content="机器人控制界面" Margin="10" Click="Button_机器人控制_Click" Cursor="Hand"  FontWeight="Bold"/>
                        <!--<Button Content="物料名称设置界面" Margin="10" Click="Button_物料名称设置界面_Click" FontWeight="Bold"/>
                        <Button Content="生产管理" Margin="10" Click="Button_产品NG管控_Click" FontWeight="Bold"/>-->
                        <!--<Button Content="预警信息查询界面" Margin="10" Click="Button_预警信息查询界面_Click" FontWeight="Bold"/>-->
                    </StackPanel>
                </ScrollViewer>

            </GroupBox>

            <GroupBox Header="日志" Grid.Row="1" Grid.Column="1">
                <TabControl>
                    <TabItem Header="运行日志">
                        <ListBox x:Name="日志区" VirtualizingPanel.ScrollUnit="Pixel" SelectionMode="Extended" KeyDown="日志区_KeyDown">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="复制" Click="MenuItem_复制_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                    </TabItem>
