<mah:MetroWindow x:Class="Lmes.界面.物料绑定信息查询界面"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lmes.界面"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="物料绑定信息查询界面" Height="450" Width="800" Loaded="MetroWindow_Loaded">
    <!--WindowState="Maximized"-->
    <d:MetroWindow.DataContext>
        <local:物料绑定信息查询界面/>
    </d:MetroWindow.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="查询结果">
            <DataGrid Name="materialBindInfos" ItemsSource="{Binding MaterialBindInfos}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Resources>
                    <Style x:Key="CenteredTextBlockStyle" TargetType="{x:Type TextBlock}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn ElementStyle="{StaticResource CenteredTextBlockStyle}" Header="产品SN" Binding="{Binding snNumber}"/>
                    <DataGridTextColumn ElementStyle="{StaticResource CenteredTextBlockStyle}" Header="工位名称" Binding="{Binding stationCode}"/>
                    <DataGridTextColumn ElementStyle="{StaticResource CenteredTextBlockStyle}" Header="物料编码" Binding="{Binding materialCode}"/>
                    <DataGridTextColumn ElementStyle="{StaticResource CenteredTextBlockStyle}" Header="用户ID" Binding="{Binding userId}"/>
                    <DataGridTextColumn ElementStyle="{StaticResource CenteredTextBlockStyle}" Header="记录时间" Binding="{Binding requestTime}"/>
                    <DataGridTemplateColumn Header="子物料详情">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DataGrid x:Name="PART_DataGrid" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding data}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="子物料名称" Binding="{Binding assemblyMaterialName}" />
                                        <DataGridTextColumn Header="子物料条码" Binding="{Binding assemblyMaterialCode}" />
                                        <DataGridTextColumn Header="子物料数量" Binding="{Binding assemblyMaterialQty}" />
                                        <DataGridTextColumn Header="子物料组装时间" Binding="{Binding assemblyTime}"/>
                                        <DataGridTextColumn Header="子物料追溯码" Binding="{Binding assemblyMaterialSn}" />
                                        <!-- 操作按钮列 -->
                                        <DataGridTemplateColumn Header="操作">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="解除绑定" 
                                                            HorizontalContentAlignment="Left"
                                                            Click="解除子物料_Click"
                                                            BorderThickness="0"
                                                            Foreground="Black"
                                                            Background="Transparent"
                                                            Margin="0"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!-- 操作按钮列 -->
                    <DataGridTemplateColumn Header="操作">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="解除绑定" 
                                        HorizontalContentAlignment="Left"
                                        Click="解除主物料_Click"
                                        BorderThickness="0"
                                        Foreground="Black"
                                        Background="Transparent"
                                        Margin="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="41*" />
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Label Content="时间筛选" VerticalAlignment="Center"/>
                <CheckBox IsChecked="{Binding 是否时间筛选}"  VerticalAlignment="Center" Margin="0,10,10,10"/>
                <Label Content="开始时间" VerticalAlignment="Center"/>
                <TextBox Text="{Binding 开始时间,StringFormat='yyyy-MM-dd HH:mm:ss'}" VerticalAlignment="Center"/>
                <mah:DateTimePicker Width="25" SelectedDateTime="{Binding 开始时间}" VerticalAlignment="Center" Margin="10"/>
                <Label Content="结束时间" VerticalAlignment="Center"/>
                <TextBox Text="{Binding 结束时间,StringFormat='yyyy-MM-dd HH:mm:ss'}" VerticalAlignment="Center"/>
                <mah:DateTimePicker Width="25" SelectedDateTime="{Binding 结束时间}" VerticalAlignment="Center" Margin="10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Label Content="工位编号" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 工位编号}" MinWidth="80" VerticalAlignment="Center"/>
                <Label Content="工单编号" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 工单编号}" MinWidth="80" VerticalAlignment="Center"/>
                <Label Content="单体组件物料条码" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 单体组件物料编码}" MinWidth="100" VerticalAlignment="Center"/>
                <Label Content="产品SN" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 产品SN}" MinWidth="190" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Content="查询" Grid.Row="0" Grid.Column="1" Height="30" Width="120" Click="Button_查询_Click"/>
            <Button Content="导出" Grid.Row="1" Grid.Column="1" Height="30" Width="120" Cursor="Hand" Click="Button_导出_Click"/>
        </Grid>
    </Grid>
</mah:MetroWindow>
