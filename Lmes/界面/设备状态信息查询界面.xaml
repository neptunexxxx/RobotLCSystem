<mah:MetroWindow x:Class="Lmes.界面.设备状态信息查询界面"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:Lmes.界面"
        mc:Ignorable="d"
        Title="设备状态信息查询界面" Height="450" Width="800" Loaded="MetroWindow_Loaded">
    <d:MetroWindow.DataContext>
        <local:设备状态信息查询界面/>
    </d:MetroWindow.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="查询结果">
            <DataGrid Name="equipmentStatusInfo" ItemsSource="{Binding EquipmentStatus}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding machineCode}" Header="设备编码"/>
                    <DataGridTextColumn Binding="{Binding lineCode}" Header="产线编码"/>
                    <DataGridTextColumn Binding="{Binding stationCode}" Header="工位编号"/>
                    <DataGridTextColumn Binding="{Binding machineStatusCode}" Header="设备状态编码"/>
                    <DataGridTextColumn Binding="{Binding machineStatusBegin}" Header="设备状态开始时间"/>
                    <DataGridTextColumn Binding="{Binding machineStatusEnd}" Header="设备状态结束时间"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="41*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Label Content="时间筛选" VerticalAlignment="Center"/>
                <CheckBox IsChecked="{Binding 是否时间筛选}"  VerticalAlignment="Center" Margin="0,10,10,10"/>
                <Label Content="开始时间" VerticalAlignment="Center"/>
                <TextBox Text="{Binding 开始时间,StringFormat='yyyy-MM-dd HH:mm:ss'}" VerticalAlignment="Center"/>
                <mah:DateTimePicker Width="25" SelectedDateTime="{Binding 开始时间}" VerticalAlignment="Center" Margin="10"/>
                <Label Content="结束时间" VerticalAlignment="Center"/>
                <TextBox Text="{Binding 结束时间,StringFormat='yyyy-MM-dd HH:mm:ss'}" VerticalAlignment="Center"/>
                <mah:DateTimePicker Width="25" SelectedDateTime="{Binding 结束时间}" VerticalAlignment="Center" Margin="10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Label Content="产线编码" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 产线编码}" MinWidth="80" VerticalAlignment="Center"/>
                <Label Content="工位编号" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 工位编号}" MinWidth="80" VerticalAlignment="Center"/>
                <Label Content="设备编码" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 设备编码}" MinWidth="80" VerticalAlignment="Center"/>
                <Label Content="设备状态编码" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 设备状态编码}" MinWidth="80" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Content="查询" Grid.Row="0" Grid.Column="1" Height="30" Width="120" Click="Search_Click"/>
            <Button Content="导出" Grid.Row="1" Grid.Column="1" Height="30" Width="120" Click="Export_Click"/>
        </Grid>
    </Grid>
</mah:MetroWindow>
