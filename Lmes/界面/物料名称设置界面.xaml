<mah:MetroWindow x:Class="Lmes.界面.物料名称设置界面"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lmes.界面"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="物料名称设置界面" Height="450" Width="800">
    <d:MetroWindow.DataContext>
        <local:物料名称设置界面/>
    </d:MetroWindow.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="112*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="物料名称设置">
            <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding 物料信息表}" Margin="5" CanUserAddRows="False" Background="Transparent" Name="物料信息列表">
                <DataGrid.Columns>
                    <DataGridTextColumn Header ="物料名称" Binding="{Binding 物料名称}"/>
                    <DataGridTextColumn Header ="正则表达式" Binding="{Binding 正则表达式}"/>
                    <DataGridCheckBoxColumn Header="是否使用" Binding="{Binding 是否使用}"/>
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="添加" Click="MenuItem_添加_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </GroupBox>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" >
            <Button Content="取消" Margin="5" Click="Button_取消_Click"/>
            <Button Content="保存" Margin="5" Click="Button_保存_Click"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
