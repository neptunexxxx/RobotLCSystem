                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        错误列表
        <GroupBox Grid.Column="3" Header="系统错误">
            <DataGrid ItemsSource="{Binding ErrorList}" 
              Style="{StaticResource ModernDataGridStyle}">
