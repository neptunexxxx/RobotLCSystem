<Grid Background="#FFF5F5F5">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="300"/>
    </Grid.RowDefinitions>

    顶部连接控制区域
    <GroupBox Grid.Row="0" Header="机器人连接控制">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            第一行：连接控制
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                <Label Content="机器人IP:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="120" Text="{Binding RobotIP}" VerticalAlignment="Center" Padding="5,2"/>
                <Button Content="连接" Style="{StaticResource SuccessButtonStyle}"
                            Width="60"
                            Click="BtnConnect_Click" Margin="10,0,0,0"/>
                <Button Content="断开" Style="{StaticResource DangerButtonStyle}"
                            Width="60" Margin="10,0"
                            Click="BtnDisconnect_Click"/>
                <Button Content="清除错误" Style="{StaticResource ModernButtonStyle}" 
                            Width="60" Margin="5,0,0,0"
                            Click="BtnClearError_Click"/>

                连接状态指示
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                    <Ellipse Style="{StaticResource StatusIndicator}" 
                                 Fill="{Binding ConnectionStatusBrush}"/>
                    <Label Content="{Binding ConnectionStatus}" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>

            第二行：机器人状态信息
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Label Content="伺服状态:" FontWeight="Bold"/>
                    <Label Content="{Binding ServoStatus}"/>
                    <Button Content="上电" Style="{StaticResource SuccessButtonStyle}" 
                                Width="60"
                                Click="BtnServoOn_Click" Margin="5,0"/>
                    <Button Content="下电" Style="{StaticResource DangerButtonStyle}" 
                                Margin="5,0,0,0"
                                Width="60"
                                Click="BtnServoOff_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Label Content="工作模式:" FontWeight="Bold"/>
                    <Label Content="{Binding WorkMode}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Label Content="运动状态:" FontWeight="Bold"/>
                    <Label Content="{Binding IsMoving, Converter={StaticResource BoolToStringConverter}}" 
                               Foreground="{Binding IsMoving, Converter={StaticResource BoolToColorConverter}}"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Label Content="速度比例:" FontWeight="Bold"/>
                    <TextBox Width="50" Text="{Binding SpeedRatio}" VerticalAlignment="Center"/>
                    <Label Content="%"/>
                    <Button Content="设置" Style="{StaticResource ModernButtonStyle}" 
                                Width="60"
                                Click="BtnSetSpeedRatio_Click" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <Label Content="错误状态:" FontWeight="Bold"/>
                    <Ellipse Width="10" Height="10" 
                                 Fill="{Binding HasError, Converter={StaticResource BoolToErrorColorConverter}}" 
                                 VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="5" Content="急停" Style="{StaticResource DangerButtonStyle}" 
                            Width="60"
                            FontWeight="Bold" Click="BtnEmergencyStop_Click" Margin="10,0"/>
            </Grid>
        </Grid>
    </GroupBox>

    主要内容区域
    <Grid Grid.Row="1" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        左列：位置信息 
            Style="{StaticResource ModernGroupBoxStyle}"
        <GroupBox Grid.Column="0" Header="机器人位置信息" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="291.77"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="关节位置 (度)" FontWeight="Bold" Margin="0,0,0,5"/>
                <DataGrid Grid.Row="1" ItemsSource="{Binding JointPositions}" 
                              Style="{StaticResource ModernDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="关节" Binding="{Binding Name}" Width="60"/>
                        <DataGridTextColumn Header="位置" Binding="{Binding Value, StringFormat=F3}" Width="*"/>
                        <DataGridTextColumn Header="单位" Binding="{Binding Unit}" Width="40"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Label Grid.Row="2" Content="笛卡尔位置" FontWeight="Bold" Margin="0,10,0,5"/>
                <DataGrid Grid.Row="3" ItemsSource="{Binding CartesianPositions}" 
                              Style="{StaticResource ModernDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="轴" Binding="{Binding Name}" Width="60"/>
                        <DataGridTextColumn Header="位置" Binding="{Binding Value, StringFormat=F3}" Width="*"/>
                        <DataGridTextColumn Header="单位" Binding="{Binding Unit}" Width="40"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        中列：程序控制和变量
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            程序控制
            <GroupBox Grid.Row="0" Header="程序控制">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    程序名称
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="程序名称:" Width="80"/>
                        <TextBox Text="{Binding ProgramName}" Width="150"/>
                    </StackPanel>

                    程序控制按钮
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="上传程序" Style="{StaticResource ModernButtonStyle}" 
                                    Width="60"
                                    Click="BtnUploadProgram_Click" Margin="10,0,0,0"/>
                        <Button Content="启动" Style="{StaticResource SuccessButtonStyle}"
                                    Width="60"
                                    Click="BtnStartProgram_Click" Margin="10,0,0,0"/>
                        <Button Content="停止" Style="{StaticResource DangerButtonStyle}" 
                                    Width="60"
                                    Click="BtnStopProgram_Click" Margin="10,0,0,0"/>
                        <Button Content="暂停" Style="{StaticResource ModernButtonStyle}"
                                    Margin="10,0,0,0"
                                    Width="60"
                                    Click="BtnPauseProgram_Click"/>
                    </StackPanel>

                    程序状态
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="程序状态:" FontWeight="Bold" Width="80"/>
                        <Label Content="{Binding ProgramStatus}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="运行行号:" FontWeight="Bold" Width="80"/>
                        <Label Content="{Binding ProgramLine}"/>
                    </StackPanel>


                </Grid>
            </GroupBox>

            变量控制
            <GroupBox Grid.Row="1" Header="变量控制">
                <TabControl>
                    GR变量
                    <TabItem Header="GR变量 (浮点)">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            GR操作控制
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5,0,10">
                                <Label Content="索引:" FontWeight="Bold" Width="50"/>
                                <TextBox Text="{Binding GRIndex}" Width="50" Margin="0,0,10,0"/>
                                <Label Content="值:" FontWeight="Bold" Width="30"/>
                                <TextBox Text="{Binding GRValue}" Width="80" Margin="0,0,10,0"/>
                                <Button Content="设置" Style="{StaticResource ModernButtonStyle}" 
                                            Width="50"
                                            Click="BtnSetGR_Click" Margin="5 0 0 0"/>
                                <Button Content="获取" Style="{StaticResource ModernButtonStyle}" 
                                            Width="50"
                                            Click="BtnGetGR_Click"
                                            Margin="5 0 0 0"/>
                            </StackPanel>

                            GR变量列表
                            <DataGrid Grid.Row="1" ItemsSource="{Binding GRVariables}" 
                                          Style="{StaticResource ModernDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="索引" Binding="{Binding Index}" Width="50"/>
                                    <DataGridTextColumn Header="值" Binding="{Binding Value}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    GI变量
                    <TabItem Header="GI变量 (整数)">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            GI操作控制
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5,0,10">
                                <Label Content="索引:" FontWeight="Bold" Width="50"/>
                                <TextBox Text="{Binding GIIndex}" Width="50" Margin="0,0,10,0"/>
                                <Label Content="值:" FontWeight="Bold" Width="30"/>
                                <TextBox Text="{Binding GIValue}" Width="80" Margin="0,0,10,0"/>
                                <Button Content="设置" Style="{StaticResource ModernButtonStyle}" 
                                            Width="50"
                                            Click="BtnSetGI_Click" Margin="5,0,0,0"/>
                                <Button Content="获取" Style="{StaticResource ModernButtonStyle}" 
                                            Margin="5 0 0 0"
                                            Width="50"
                                            Click="BtnGetGI_Click"/>
                            </StackPanel>

                            GI变量列表
                            <DataGrid Grid.Row="1" ItemsSource="{Binding GIVariables}" 
                                          Style="{StaticResource ModernDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="索引" Binding="{Binding Index}" Width="50"/>
                                    <DataGridTextColumn Header="值" Binding="{Binding Value}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </GroupBox>
        </Grid>

        右列：IO状态
        <GroupBox Grid.Column="2" Header="IO状态监控">
            <DataGrid ItemsSource="{Binding IOStatus}" Style="{StaticResource ModernDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="IO名称" Binding="{Binding Name}" Width="80"/>
