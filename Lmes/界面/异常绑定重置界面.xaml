<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        x:Class="Lmes.界面.异常绑定重置界面"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lmes.界面"
        mc:Ignorable="d"
        Title="异常绑定重置界面" Height="450" Width="800">
    <Grid>
        <GroupBox Header="异常绑定">
            <DataGrid x:Name="DataGrid" ItemsSource="{Binding 异常绑定信息表格}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Resources>
                    <Style x:Key="CenteredTextBlockStyle" TargetType="{x:Type TextBlock}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <!-- 数据列 -->
                    <DataGridTextColumn Header="产品SN" Binding="{Binding snNumber}" ElementStyle="{StaticResource CenteredTextBlockStyle}"/>
                    <DataGridTextColumn Header="异常类型" Binding="{Binding exceptionType}" ElementStyle="{StaticResource CenteredTextBlockStyle}"/>
                    <DataGridTextColumn Header="异常代码" Binding="{Binding exceptionCode}" ElementStyle="{StaticResource CenteredTextBlockStyle}"/>
                    <DataGridTextColumn Header="绑定时间" Binding="{Binding time}" ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                    <!-- 操作按钮列 -->
                    <DataGridTemplateColumn Header="操作">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="解除绑定" 
                                        HorizontalContentAlignment="Left"
                                        Click="UnbindButton_Click"
                                        BorderThickness="0"
                                        Foreground="Black"
                                        Background="Transparent"
                                        Margin="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</mah:MetroWindow>