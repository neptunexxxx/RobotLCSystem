<mah:MetroWindow x:Class="Lmes.界面.设备稼动时长数采信息查询界面"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lmes.界面"
        mc:Ignorable="d"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        Title="设备稼动时长数采信息查询界面" Height="450" Width="800" Loaded="MetroWindow_Loaded">
    <d:MetroWindow.DataContext>
        <local:设备稼动时长数采信息查询界面/>
    </d:MetroWindow.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="查询结果">
            <DataGrid Name="deviceStatusAndDurationInfo" ItemsSource="{Binding DeviceStatusAndDuration}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding machineCode}" Header="设备编码"/>
                    <DataGridTextColumn Binding="{Binding acquisitCode}" Header="数采设备编码"/>
                    <DataGridTextColumn Binding="{Binding machineStatusCode}" Header="设备状态编码"/>
                    <DataGridTextColumn Binding="{Binding curRunningDuration}" Header="当次运行时长"/>
                    <DataGridTextColumn Binding="{Binding totalRunningDuration}" Header="累计运行时长"/>
                    <DataGridTextColumn Binding="{Binding timeUnit}" Header="运行时长单位"/>
                    <DataGridTextColumn Binding="{Binding requestTime}" Header="更新时间"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <Label Content="设备编码" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 设备编码}" MinWidth="80" VerticalAlignment="Center"/>
                <Label Content="设备状态编码" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 设备状态编码}" MinWidth="80" VerticalAlignment="Center"/>
                <Label Content="数采设备编码" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding 数采设备编码}" MinWidth="80" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="查询" Margin="20 0 0 0" Height="30" Width="120" Click="Search_Click"/>
                <Button Content="导出" Margin="20 0 0 0"  Height="30" Width="120" Click="Export_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</mah:MetroWindow>
